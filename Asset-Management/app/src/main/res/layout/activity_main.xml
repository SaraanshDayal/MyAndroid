<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a5013003452.assetmanagement.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Person"
        android:onClick="RegisterPerson"
        android:id="@+id/person_register"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/asset_register"
        android:layout_alignStart="@+id/asset_register" />

    <Button
        android:id="@+id/view_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People List"
        android:onClick="ViewPeople"
        android:layout_marginTop="81dp"
        android:layout_alignTop="@+id/asset_register"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Asset"
        android:onClick="RegisterAsset"
        android:id="@+id/asset_register"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/person_register"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/view_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assets List"
        android:onClick="ViewAssets"
        android:layout_marginBottom="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/view_people"
        android:layout_alignEnd="@+id/view_people" />

    <Button
        android:id="@+id/button"
        android:onClick="AllocateAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="Allocate Asset" />
</RelativeLayout>
